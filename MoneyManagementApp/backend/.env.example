/**
 * Environment Configuration File
 * 
 * Copy this file to .env and update with your actual values
 * Never commit .env file to version control!
 * 
 * Usage in code:
 * import dotenv from 'dotenv';
 * dotenv.config();
 * const dbHost = process.env.DB_HOST;
 */

# ============ SERVER ============
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ============ DATABASE (PostgreSQL) ============
DB_HOST=localhost
DB_PORT=5432
DB_NAME=money_management
DB_USER=postgres
DB_PASSWORD=your_secure_password

# ============ AUTHENTICATION ============
# Generate secure JWT secret: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# ============ ENCRYPTION ============
# For encrypting sensitive data in database
ENCRYPTION_KEY=your_encryption_key_32_chars_long

# ============ SMS PARSING CONFIG ============
# Bank SMS patterns for transaction parsing
SMS_SENDER_IDS=HDFC,ICIC,AXIS,YESB,KOTAK
SMS_PARSING_ENABLED=true

# ============ LOGGING ============
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ============ EXTERNAL APIs ============
# If using third-party services for OTP, SMS, etc.
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
